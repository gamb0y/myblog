<%- include('partials/header'); -%>


<h1>Compose</h1>


<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="formTextInput1">Title</label>
    <input type="text" name="postTitle" class="form-control" id="formTextInput1" autocomplete="off" autofocus="on">
  </div>
  <div class="form-group">
    <label for="formTextarea1">Post</label>
    <textarea name="postContent" class="form-control" id="formTextarea1" rows="5"></textarea>
  </div>
  <button type="submit" name="postButton" class="btn btn-primary">Publish</button>
</form>


<%- include('partials/footer'); -%>
