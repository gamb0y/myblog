<%- include('partials/header'); -%>

<h1>Home</h1>

<p><%= homeStartingContent %></p>

<% posts.forEach( function(element) { %>
  <h1><%= element.title %></h1>
  <% const previewContent = element.content.substring(0, 100) + "..."; %>
  <% const trimedTitle = element.title.trim(); %>
  <p><%= previewContent %> <a href="/posts/<%= trimedTitle %>">Read More</a></p>
<% }); %>

<%- include('partials/footer'); -%>
